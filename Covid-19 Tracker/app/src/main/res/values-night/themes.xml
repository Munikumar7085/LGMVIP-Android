<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covid19Tracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#444249</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/theme_dark_bg</item>
    </style>
    <style name="MyTextView">
        <item name="android:textColor">@color/white</item>
    </style>
   <style name="AppTitle">
       <item name="android:textColor">@color/dark_text_color</item>
   </style>
    <style name="RecycleTextColor">
        <item name="android:textColor">@color/dark_text_color</item>
    </style>
    <style name="Sources">
       <item name="neumorph_shadowColorDark">@color/dark_shadow_source</item>
        <item name="neumorph_shadowColorLight">@color/dark_light_source</item>
    </style>
    <style name="Active">
        <item name="android:textColor">@color/neon_green</item>
    </style>
    <style name="Confirmed">
        <item name="android:textColor">@color/scarlet_red</item>
    </style>
    <style name="Deceased">
        <item name="android:textColor">@color/meganta</item>
    </style>
    <style name="Recovered">
        <item name="android:textColor">@color/aqua</item>
    </style>
    <style name="img_src">
        <item name="android:src">@drawable/letsgrowmoredark</item>
    </style>
</resources>