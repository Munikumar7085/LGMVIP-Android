<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neumorph_shadowElevation="5dp"
        style="@style/Sources"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="100"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="80"
            android:text="Andhra Pradesh"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"
            style="@style/RecycleTextColor"
            android:layout_margin="5dp"
            android:gravity="center"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="20"
            android:src="@drawable/ic_arrow_upward"
            />

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/active_cases"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="Active cases: "
                        style="@style/Active"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/active_test"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/confirmed_cases"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        style="@style/Confirmed"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_vertical"
                        android:text="Confirmed cases: "
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/confirmed_test"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/deceased_cases"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="Deceased cases: "
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        style="@style/Deceased"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/deceased_test"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:weightSum="100"
                    >
                    <TextView
                        android:id="@+id/recovered_cases"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="Recovered cases: "
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins"
                        style="@style/Recovered"
                        />
                    <TextView
                        android:id="@+id/recovered_test"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </soup.neumorphism.NeumorphCardView>

</LinearLayout>